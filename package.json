{
  "name": "tun-statics",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint {lib,tests}/**",
    "build": "rm -rf ./dist/ && tsc --build",
    "test": "ts-mocha -n loader=ts-node/esm -p tsconfig.json tests/**/*.test.ts",
    "test:watch": "ts-mocha -n loader=ts-node/esm -p tsconfig.json tests/**/*.test.ts -w --watch-extensions ts",
    "release": "npm run dist && standard-version",
    "release:minor": "npm run dist && standard-version --release-as minor",
    "release:patch": "npm run dist && standard-version --release-as patch",
    "release:major": "npm run dist && standard-version --release-as major",
    "push-release": "git push && git push --tags",
    "dist": "npm run build && git add dist && git commit -m \"chore: dist\""
  },
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-define-config": "^1.2.5",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "lint-staged": "^12.3.4",
    "mocha": "^9.2.1",
    "node-fetch": "^3.2.0",
    "prettier": "^2.5.1",
    "simple-git-hooks": "^2.7.0",
    "standard-version": "^9.3.2",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.5.0",
    "tun": "ssh://git@abcssh.pwwhb.com:39802/tunframework/tun.git#v1.1.3",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1"
  },
  "files": [
    "dist/*",
    "index.js"
  ],
  "private": true,
  "engines": {
    "node": ">=12.2.0"
  },
  "homepage": "https://abc.pwwhb.com/gitlab/tunframework/tun-statics",
  "keywords": [
    "backend",
    "http-server",
    "statics",
    "tun-statics"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "npx --no-install commitlint --edit \"$1\""
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "{lib,tests}/**/*.ts": [
      "eslint --ext .ts"
    ],
    "{lib,tests}/**/*.d.ts": [
      "eslint --ext .ts"
    ]
  },
  "packageManager": "pnpm@6.30.0"
}
